   "source": [
    "def to_excel(df):\n",
    "    output = BytesIO()\n",
    "    writer = pd.ExcelWriter(output, engine='xlsxwriter')\n",
    "    df.to_excel(writer, index=False, sheet_name='Sheet1')\n",
    "    writer.close()\n",
    "    processed_data = output.getvalue()\n",
    "    return processed_data"
   ]
  },
