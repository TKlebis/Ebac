    "            bank = (bank.query(\"age >= @idades[0] and age <= @idades[1]\")\n",
    "                        .pipe(multiselect_filter, 'job', jobs_selected)\n",
    "                        .pipe(multiselect_filter, 'marital', marital_selected)\n",
